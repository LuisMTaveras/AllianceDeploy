<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllianceDeploy.View.HomePage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackGroundLight},Dark={StaticResource BackGroundDark}}"
             StyleClass="{StaticResource Navegacion}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Frame StyleClass="FramePrincipal" Grid.Column="0" Grid.Row="0">
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="NSistema"  StyleClass="LabelTitulo"/>
                </StackLayout>
            </StackLayout>
        </Frame>

        <Frame StyleClass="FramePrincipal" Grid.Column="0" Grid.Row="1">
                <StackLayout >
                    <StackLayout Orientation="Horizontal">

                    </StackLayout>
                </StackLayout>
            </Frame>
    </Grid>
</ContentPage>
