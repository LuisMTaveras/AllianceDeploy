<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AllianceDeploy.View.HomePage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackGroundLight},Dark={StaticResource BackGroundDark}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Frame StyleClass="FramePrincipal" Grid.Column="0" Grid.Row="0">
            <StackLayout >
                <StackLayout Orientation="Horizontal">
                    <Image Source="edificio.png" HeightRequest="40"/>
                    <Label Text="Nombre Empresa"  StyleClass="LabelTitulo"/>
                </StackLayout>
                <Label Text="Sistema Financiero" StyleClass="LabelTitulo"/>
                <Entry Placeholder="hola"/>
                <Entry Placeholder="hola"/>
                <Entry Placeholder="hola"/>
            </StackLayout>
             
        </Frame>
    </Grid>
</ContentPage>
